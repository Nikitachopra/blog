<%= form_with model: @article, local: true do |f| %>

	<% if @article.errors.any? %>
	<p>
		<h2><%= pluralize(@article.errors.count, "error")%></h2>
		Prohibitted from saving the article due to 
		<ul>
			<%= @article.errors.full_messages.each do |err| %>
				<li><%= err %></li>
			<%end%>
		</ul>
	</p>
	<%end%>

	<p>
		<%= f.label :avatar, "Image Upload" %>
		<%= f.file_field :avatar %>
	</p>
	<p>
	<%= f.label :title %>
	<%= f.text_field :title %>
	</p>
	<p>
	<%= f.label :text %>
	<%= f.text_field :text %>
	</p>
	<p>
		<%= f.submit %>
	</p>

<%end%>

<%= link_to "Back", articles_path%>